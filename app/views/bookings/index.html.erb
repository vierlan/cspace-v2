<div>

  <p>View and change your bookings here</p>
  <table class="table table-striped table-sm mt-2">
    <tbody>
      <% @current_bookings.each do |booking| %>
        <tr>
          <td><%= booking.venue.name %></td>
          <td><%= booking.package.package_name %></td>
          <td><%= booking.booking_date.strftime("%A, %d %b %Y") %></td>
          <td><%= booking.booking_start_time.strftime("%H:%M") %></td>
          <td><%= booking.booking_cost %></td>
          <td><%= booking.booking_confirmed %></td>
          <td><%= booking.booking_paid %></td>
          <td><%= link_to "Edit", edit_booking_path(booking.venue, booking.package, booking), class: "btn btn-primary" %></td>
          <td><%= link_to "Delete", booking_path(booking.venue, booking.package, booking), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
      <td><%=  %></td>
    </tbody>
  </table>
  <div class="flex flex-wrap">
  <h2>Booking History</h2>
  <table>
    <tbody>
      <% @past_bookings.each do |booking| %>
        <tr>
          <td><%= booking.venue.name %></td>
          <td><%= booking.package.package_name %></td>
          <td><%= booking.booking_date.strftime("%A, %d %b %Y") %></td>
          <td><%= booking.booking_start_time.strftime("%H:%M") %></td>
          <td><%= booking.booking_cost %></td>
          <td><%= booking.booking_confirmed %></td>
          <td><%= booking.booking_paid %></td>
          <td><%= link_to "Edit", edit_booking_path(booking.venue, booking.package, booking), class: "btn btn-primary" %></td>
          <td><%= link_to "Delete", booking_path(booking.venue, booking.package, booking), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
