<div>
  <h1 class="font-bold text-4xl">Bookings#index</h1>
  <p>View and change your bookings here</p>
  <div class="flex flex-wrap">
    <h2>Upcoming bookings</h2>
    <% @current_bookings.each do |booking| %>
      <div class="w-1/3 p-4">
        <div class="bg-white shadow-md rounded p-4">
          <h2 class="font-bold text-2xl"><%= booking.venue.name %></h2>
          <p><%= booking.package.package_name %></p>
          <p><%= booking.booking_date.strftime("%A, %d %b %Y") %></p>
          <p><%= booking.booking_start_time.strftime("%H:%M") %></p>
          <%= link_to "Edit", edit_booking_path(booking.venue, booking.package, booking), class: "btn btn-primary" %>
          <%= link_to "Delete", booking_path(booking.venue, booking.package, booking), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
    <h2>Booking History</h2>
    <% @past_bookings.each do |booking| %>
      <div class="w-1/3 p-4">
        <div class="bg-white shadow-md rounded p-4">
          <h2 class="font-bold text-2xl"><%= booking.venue.name %></h2>
          <p><%= booking.package.package_name %></p>
          <p><%= booking.booking_date.strftime("%A, %d %b %Y") %></p>
          <p><%= booking.booking_start_time.strftime("%H:%M") %></p>
          <%= link_to "Edit", edit_booking_path(booking.venue, booking.package, booking), class: "btn btn-primary" %>
          <%= link_to "Delete", booking_path(booking.venue, booking.package, booking), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
</div>
