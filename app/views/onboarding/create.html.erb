<div class="bg-white h-[calc(100vh_-_50px)]">
  <div class="flex flex-col justify-center items-center mt-10 mb-8">
    <h1 class="font-bold text-3xl">Onboarding</h1>
    <%= image_tag "logo.png", style: "height: 62px" %></div>
  <div id="indicators-carousel" class="relative w-full" data-carousel="static">
    <!-- Carousel wrapper -->
    <div class="flex flex-col">
      <div class="relative h-96 overflow-hidden rounded-lg md:h-96">
        <!-- Item 1 -->
        <div class="bg-white w-10/12 hidden absolute flex-col duration-700 ease-in-out -translate-x-1/2 -translate-y-1/2 top-1/3 left-1/2" data-carousel-item="active">
          <img src="/assets/hello.png" class="h-80 p-3 mx-auto"  alt="...">
          <div class="relative mx-auto">
            <p class="bg-white"> Hi Billy!</p>
            <p class="bg-white"> Welcome to Commonspace</p>
          </div>
        </div>
        <!-- Item 2 -->
        <div class="bg-white w-10/12 hidden absolute flex-col duration-700 ease-in-out -translate-x-1/2 -translate-y-1/2 top-1/3 left-1/2" data-carousel-item>
          <img src="/assets/work_day.png" class="h-80 p-3 mx-auto" alt="...">
          <div class="relative mx-auto">
            <p class="bg-white">Find a new place to work everyday, what ever your needs be.</p>
          </div>
        </div>
        <!-- Item 3 -->
        <div class="bg-white w-10/12 hidden absolute flex-col duration-700 ease-in-out -translate-x-1/2 -translate-y-1/2 top-1/3 left-1/2" data-carousel-item>
          <img src="/assets/find_way.png" class="h-80 p-3 mx-auto" alt="...">
          <div class="relative mx-auto">
            <p class="bg-white">Find a place you like</p>
          </div>
        </div>
        <!-- Item 4 -->
        <div class="bg-white w-10/12 hidden absolute flex-col duration-700 ease-in-out -translate-x-1/2 -translate-y-1/2 top-1/3 left-1/2" data-carousel-item>
          <img src="/assets/shop_open4.png" class="h-80 p-3 mx-auto" alt="...">
          <div class="relative mx-auto">
            <p class="bg-white">Spaces come with a package deal which you pay for the time and the comsumables</p>
          </div>
        </div>
        <!-- Item 5 -->
        <div class="bg-white w-10/12 hidden absolute flex-col duration-700 ease-in-out -translate-x-1/2 -translate-y-1/2 top-1/3 left-1/2" data-carousel-item>
          <img src="/assets/shop_open5.png" class="h-80 p-3 mx-auto" alt="...">
          <div class="relative mx-auto">
            <p class="bg-white">This way you support the space while being able to enjoy doing your activity at the space</p>
          </div>
        </div>
        <!-- Item 6 -->
        <div class="bg-white w-10/12 hidden absolute flex-col duration-700 ease-in-out -translate-x-1/2 -translate-y-1/2 top-1/3 left-1/2" data-carousel-item>
          <img src="/assets/solar_system.png" class="h-80 p-3 mx-auto" alt="...">
          <div class="relative mx-auto">
            <p class="bg-white">Everyplace is a commonspace!</p>
          </div>
        </div>
        <!-- Slider controls -->
        <button type="button" class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
          <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-gray-200/30 group-hover:bg-gray-600/30 group-focus:ring-4 group-focus:ring-gray-600/70 group-focus:outline-none">
            <svg class="w-4 h-4 text-gray-600 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
            </svg>
            <span class="sr-only">Previous</span>
          </span>
        </button>
        <button type="button" class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-next>
          <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-gray-200/30 group-hover:bg-gray-600/30 group-focus:ring-4 group-focus:ring-gray-600/70 group-focus:outline-none">
            <svg class="w-4 h-4 text-gray-y-600 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
            </svg>
            <span class="sr-only">Next</span>
          </span>
        </button>
      </div>
      <!-- Slider indicators -->
      <div class="relative h-20">
        <div class="absolute z-30 flex -translate-x-1/2 space-x-4 rtl:space-x-reverse top-5 left-1/2">
          <button type="button" class="w-5 h-5 rounded-full bg-slate-200" aria-current="true" aria-label="Slide 1" data-carousel-slide-to="0"></button>
          <button type="button" class="w-5 h-5 rounded-full bg-slate-200" aria-current="false" aria-label="Slide 2" data-carousel-slide-to="1"></button>
          <button type="button" class="w-5 h-5 rounded-full bg-slate-200" aria-current="false" aria-label="Slide 3" data-carousel-slide-to="2"></button>
          <button type="button" class="w-5 h-5 rounded-full bg-slate-200" aria-current="false" aria-label="Slide 4" data-carousel-slide-to="3"></button>
          <button type="button" class="w-5 h-5 rounded-full bg-slate-200" aria-current="false" aria-label="Slide 5" data-carousel-slide-to="4"></button>
          <button type="button" class="w-5 h-5 rounded-full bg-slate-200" aria-current="false" aria-label="Slide 6" data-carousel-slide-to="5"></button>
          <%= link_to dashboard_path do%>
            <div class="">
              <b>
                <h3>Skip</h3>
              </b>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
