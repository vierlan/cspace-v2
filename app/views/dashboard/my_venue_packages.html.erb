
<div class="d-block my-4 ml-10">
  <%= link_to "back", my_venues_path, class: "btn btn-primary" %>
</div>

<div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 ml-10 '>

    <% @packages.each do |package| %>
      <%= link_to edit_package_path(package) do %>
        <div class="border border-cyan-400 flex flex-col">
          <div class="grid grid-cols-2 border relative w-full  gap-1 text-sm leading-5 font-medium rounded-md bg-primary-600 hover:bg-primary-700 focus:outline-none">
            <div class="h-full text-base grid grid-rows-4 overflow-hidden hover:overflow-visable p-1">
              <h2 class="text-lg text-gray-500 focus:outline-none"><%= package.package_name.capitalize %></h2>
              <p class="text-gray-400"><%= package.package_description %> </p>
              <p class="text-gray-400"><%= "#{package.package_duration} hours" if package.package_duration %></p>
              <p class="text-gray-400">â‚¬<%= package.package_price %></p>
            </div>
            <div class='border border-white'>
              <% if package.photo.key %>
                <%= cl_image_tag package.photo.key, alt: "PICTURE", class: "object-cover w-40 h-full" %>
              <% else %>
                <%= image_tag "avatar.png", class: "h-10 w-10 rounded-full" %>
              <% end %>

          <% end %>
          </div>
        </div>
        <div class="border border-pink-400">
          <%= link_to "destroy this package", package_path(package), class: "btn btn-warning w-full", data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this package?"} %>
        </div>
</div>
    <% end %>

</div>
