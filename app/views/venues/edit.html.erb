<div class="container py-5">
  <div class="row justify-content-center">
     <div class="col-12 col-md-6 offset-lg-3">
     <div class="bg-white rounded p-3 shadow">
        <h3>Edit your venue</h3>
        <%= simple_form_for(@venue) do |f| %>
        <%= f.input :name %>
        <div class="input-group">
          <%= f.label :categories %>
          <%= f.select :categories, :collection => %w[bar restaurant cafe hotel other] %>
        </div>
        <%= f.input :amenities %>
        <%= f.input :address %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.submit "Submit Edits", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
